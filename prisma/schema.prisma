model Question {
  id      String @id @default(cuid())
  message String

  review Int?
  managerReview Int?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
